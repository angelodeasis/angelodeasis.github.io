    <!-- Hero Section -->
    <header class="text-center py-5">
        <div class="container">
            <h1 class="tool-text-4xl bg-gradient-to-r from-purple-600 to-blue-600 bg-clip-text font-extrabold text-transparent sm:text-5xl">Convert PDF to Flashcards</h1>
            <p class="lead">Transform your PDFs into interactive flashcards and supercharge your learning with ADE TECH.</p>
        </div>
    </header>

    <!-- File Upload Section -->
    <section class="text-center py-5 bg-light">
        <div class="container">
            <h2>Upload Your PDF</h2>
            <p>Select a PDF to convert it into interactive flashcards. You can also drag and drop a file.</p>
            
            <div class="upload-box mx-auto">
                <form id="uploader" method="post" enctype="multipart/form-data">
                    <label for="fileInput" class="btn btn-outline-primary">Select a File</label>
                    <input type="file" id="fileInput" name="userFile" hidden>
                    <input type="submit" value="Submit"class="btn btn-outline-primary">
                </form>
                <p class="mt-2 text-muted">Your files are securely processed by ADE TECH's AI.</p>
            </div>

