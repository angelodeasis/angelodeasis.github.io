    </section>

    <!-- Steps Section -->
    <section class="container py-5 text-center">
        <h2 class="mb-4">How It Works</h2>
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="circle-btn">
                    <i class="fas fa-upload"></i>
                </div>
                <h4 class="mt-3">Upload your PDF</h4>
                <p>Select and upload your study material.</p>
            </div>
            <div class="col-md-4">
                <div class="circle-btn">
                    <i class="fas fa-robot"></i> <!-- AI Icon Fix -->
                </div>
                <h4 class="mt-3">AI-powered conversion</h4>
                <p>Automatically generates flashcards from your PDF.</p>
            </div>
            <div class="col-md-4">
                <div class="circle-btn">
                    <i class="fas fa-download"></i>
                </div>
                <h4 class="mt-3">Download or study online</h4>
                <p>Get your flashcards as CSV, PDF, or study online.</p>
            </div>
        </div>
    </section>
    

